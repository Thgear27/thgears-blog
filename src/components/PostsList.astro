---
import PostItem from "./PostItem.astro";

const allPosts = await Astro.glob("../pages/posts/*.md");
---

<div class="posts-list">
  {
    allPosts.map((post) => (
      <PostItem postURL={post.url} postTitle={post.frontmatter.title} postPubDate={post.frontmatter.pubDate} />
    ))
  }
</div>

<style>
  .post-list {
    display: flex;
    flex-direction: column;
  }
</style>
