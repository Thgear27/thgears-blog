---
import BaseLayout from "../layouts/BaseLayout.astro";
import PostsList from "../components/PostsList.astro";

const title = "Thgear's Code";
const mainTitle = "Thgear27's Code";

const postsfetched = await Astro.glob('./posts/*.md');
---

<BaseLayout pageTitle={title}>
  <div class="hero">
    <h1 class="hero__title">{mainTitle}</h1>
    <p class="hero__paragraph">Un lugar donde comparto mi viaje en el mundo de la programación</p>
  </div>
  <div class="posts">
    <h2 class="posts__title">Posts Recientes</h2>
    <PostsList posts={postsfetched} />
    <a class="post__explore-more" href="/tags/"> Explorar más</a>
  </div>
</BaseLayout>

<style>
  .hero {
    padding: 40px;
  }

  .hero__title {
    font-size: var(--fs-hero-title);
    color: var(--title-color);
    text-align: center;
  }

  .hero__paragraph {
    text-align: center;
  }

  .posts__title {
    color: var(--title-color);
    font-weight: var(--fw-regular);
    font-size: var(--fs-500);
    padding: 10px 0;
  }

  .posts {
    display: flex;
    flex-direction: column;
  }

  .post__explore-more {
    padding: 15px 0;
    width: 100%;
    text-align: center;
    border-top: 2px solid rgb(70, 70, 70);
    text-decoration: none;
    font-size: var(--fs-400);
    color: var(--title-color);
  }

  .post__explore-more:hover {
    color: var(--title-color);
  }
</style>
